<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:orientation="vertical"
    android:paddingTop="17dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <View
            android:layout_width="337dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/profile_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/all_close" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="프로필"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="46dp" />

    <ImageView
        android:id="@+id/profile_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@drawable/profile_default" />


    <View
        android:layout_width="match_parent"
        android:layout_height="69dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey_border"
            android:hint="닉네임"
            android:inputType="textPersonName"
            android:gravity="center"
            android:singleLine="true"
            android:textColorHint="@color/grey_border"
            android:textSize="22sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="109dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/profile_save"
            android:layout_width="343dp"
            android:layout_height="57dp"
            android:background="@color/grey_button"
            android:text="저장"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>