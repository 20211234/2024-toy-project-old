<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:orientation="vertical"
    android:paddingTop="17dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/login_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/all_close" />

        <View
            android:layout_width="337dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/login_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/login_help" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="로그인"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="51dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/login_naver"
            android:layout_width="343dp"
            android:layout_height="57dp"
            android:layout_marginBottom="18dp"
            android:background="@color/green"
            android:drawableLeft="@drawable/login_naver"
            android:paddingHorizontal="40dp"
            android:text="네이버 로그인"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/login_kakao"
            android:layout_width="343dp"
            android:layout_height="57dp"
            android:layout_marginBottom="18dp"
            android:background="@color/yellow"
            android:drawableLeft="@drawable/login_kakao"
            android:paddingHorizontal="40dp"
            android:text="카카오톡 로그인"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/login_google"
            android:layout_width="343dp"
            android:layout_height="57dp"
            android:background="@drawable/white_button"
            android:drawableLeft="@drawable/login_google"
            android:paddingHorizontal="40dp"
            android:text="구글 로그인"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="27dp" />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/grey_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="또는" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/grey_border" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/login_phone"
            android:layout_width="343dp"
            android:layout_height="57dp"
            android:background="@drawable/white_button"
            android:drawableLeft="@drawable/login_phone"
            android:paddingHorizontal="45dp"
            android:text="휴대폰 번호 로그인"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/login_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="밴드가 처음이신가요? 회원가입" />


</LinearLayout>