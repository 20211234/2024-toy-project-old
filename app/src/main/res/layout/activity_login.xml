<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="로그인"
        android:textSize="28sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_naver"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green"
            android:text="네이버로 로그인"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/login_kakao"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/yellow"
            android:text="카카오톡으로 로그인"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/login_google"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/grey_border"
            android:text="구글로 로그인"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/grey_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="또는"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/grey_border" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_phone"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/grey_border"
            android:text="휴대폰 번호로 로그인"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <TextView
        android:id="@+id/login_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="밴드가 처음이신가요? 회원가입" />





</LinearLayout>